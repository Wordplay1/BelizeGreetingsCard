<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/belizeimage"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:padding="20dp"
        android:textColor="@android:color/white"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:text="Greetings From Belize!"/>

    <TextView
        android:id="@+id/lovetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="20dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_dark"
        android:fontFamily="cursive"
        android:text="Love, Cherelle and Don!" />

    <TextView
        android:id="@+id/werehere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/lovetext"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:text="were here!"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/wishyou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/werehere"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:text="Wish you"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="30sp"
        android:textStyle="bold" />
</RelativeLayout>
